@model Blog
 
@{
    ViewData["Title"] = "Добавление поста";
    ViewData["H1"] = "Добавление поста";
}

<div class="item order">
    <form method="post" asp-controller="Blog" asp-action="Add">
        <label asp-for="Title"> </label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="error"> </span>

        <label asp-for="Annons"> </label>
        <input asp-for="Annons" />
        <span asp-validation-for="Annons" class="error"> </span>

        <label asp-for="FullText"> </label>
        <input asp-for="FullText" />
        <span asp-validation-for="FullText" class="error"> </span>
        <input type="submit" value="Добавить" />
    </form>
</div>
